{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "allowJs":true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "paths": { "@angular/*": ["./node_modules/@angular/*"] },
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }

}
